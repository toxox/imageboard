<%= form_for [@board, @discussion] do |f| %>
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
      <% @discussion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :board_id, value: params[:board_id] %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :subject, title: "Subject is required",
      data: { tooltip: true}, class: "tip-left" %><br />
    <%= f.text_field :subject %>
  </div>
  <div class="field">
    <%= f.label :comment, title: "Comment is required",
      data: { tooltip: true}, class: "tip-left" %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

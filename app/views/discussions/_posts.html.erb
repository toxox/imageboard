<% if @discussion.posts.any? %>
  <% @discussion.posts.each do |post| %>
    <div class="panel post-panel radius">
      <span><%= post.name %> - <%= format_time(post.created_at) %>
        #<%= link_to post.id, "javascript:;", class: "post_id" %>
        <span class="anchor-container"><%= link_to '', {},
          name: post.id, class: "post-anchor" %>
        </span>
     </span>
      <span class="right">
        <% if user_signed_in? %>
          <%= link_to 'Edit', edit_post_path(post), class: "tiny button radius" %>
          <%= link_to 'Destroy', post, method: :delete,
           data: { confirm: 'Are you sure?' }, class: "tiny button radius" %>
        <% end %>
      </span>
      <hr>
      <div class="post">
        <span class="image"><%= thumb_with_link(post) %></span>
        <div class="comment"><%= show(post.comment) %></div>
      </div>
    </div>
  <% end %>
<% end %>